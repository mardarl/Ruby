<p id="notice"><%= notice %></p>

<h1>ПОСТИ</h1>

<table>
  <thead>
    <tr>
      <th>ЗАГОЛОВОК</th>
      <th>ТЕКСТ</th>
      <th>АВТОР</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.author %></td>
        <td><%= link_to 'ПЕРЕГЛЯНУТИ', post %></td>
        <td><%= link_to 'РЕДАГУВАТИ', edit_post_path(post) %></td>
        <td><%= link_to 'ВИДАЛИТИ', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'НОВИЙ ПОСТ', new_post_path %>
