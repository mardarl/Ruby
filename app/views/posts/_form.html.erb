<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>ЗАГОЛОВОК:</strong>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <strong>ТЕКСТ:</strong>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <strong>АВТОР:</strong>
    <%= form.text_field :author %>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="ОНОВИТИ" data-disable-with="Update Comment">
  </div>
<% end %>
